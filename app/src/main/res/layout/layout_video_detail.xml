<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!-- Detail fragment container -->
        <FrameLayout
            android:id="@+id/video_detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/locate_user"
            android:src="@drawable/ic_my_location_black_36dp"
            android:visibility="gone"
            android:padding="@dimen/padding_geolocation"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <!-- Detail commands -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/detail_player"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp" />
        <ImageButton
            android:id="@+id/detail_edit"
            android:src="@drawable/ic_description_white_36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp" />
        <ImageButton
            android:id="@+id/detail_location"
            android:src="@drawable/ic_location_on_white_36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp" />
        <ImageButton
            android:id="@+id/detail_share"
            android:src="@drawable/ic_share_white_36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp" />
        <ImageButton
            android:id="@+id/detail_trash"
            android:src="@drawable/ic_delete_forever_white_36dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="64dp" />

    </LinearLayout>

</LinearLayout>