<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:gravity="center"
                android:onClick="onReal3D"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/left_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/left_device"
        android:contentDescription="@string/image_desc_devices"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/right_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_toRightOf="@id/left_device"
        android:layout_toEndOf="@id/left_device"
        android:src="@drawable/right_device"
        android:contentDescription="@string/image_desc_devices"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_below="@id/left_device"
        android:layout_alignLeft="@id/left_device"
        android:layout_alignStart="@id/left_device"
        android:layout_alignRight="@id/right_device"
        android:layout_alignEnd="@id/right_device"
        android:gravity="center_horizontal"
        android:text="@string/real_3d"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>